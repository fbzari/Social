{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.FIle" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/SocialApiLogs-.txt",
          "rollingInterval": "Day"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "dbconnection": "Server=localhost;Database=SocialDB;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=True;Encrypt=false"
  },
  "Jwt": {
    "Issuer": "socialApi",
    "Audience": "users",
    "ExpiryInMinutes": 60
  }
}
